{
    "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
    "packages": [
        "go@1.21",
        "goreleaser@latest",
        "golangci-lint@latest",
        "delve@latest",
        "air@latest",
        "git@latest",
        "jq@latest",
        "curl@latest"
    ],
    "env": {
        "GOPATH": "$HOME/go",
        "GO111MODULE": "on",
        "CGO_ENABLED": "0"
    },
    "shell": {
        "init_hook": [
            "echo ''",
            "echo -e '\\033[1;35mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\\033[0m'",
            "echo -e '\\033[1;36m   Hermes Development Environment\\033[0m'",
            "echo -e '\\033[1;35mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\\033[0m'",
            "echo ''",
            "# Count packages",
            "PKG_COUNT=$(devbox list 2>/dev/null | grep -c '^\\*')",
            "echo -e \"\\033[1;33m Available tools ($PKG_COUNT packages):\\033[0m\"",
            "# Display packages with clean format",
            "(",
            "  devbox list 2>/dev/null | sed '/^\\* path:/d' | sed 's/^\\* //' | awk -F' - ' '{",
            "    if (NF == 2) {",
            "      pkg = $1;",
            "      # Remove @latest or @version from package name",
            "      gsub(/@latest/, \"\", pkg);",
            "      gsub(/@[0-9.]+/, \"\", pkg);",
            "      # Extract version number",
            "      ver = $2;",
            "      printf \"%s|%s\\n\", pkg, ver",
            "    } else {",
            "      # Handle packages with pinned version but no resolved version display",
            "      split($0, parts, \"@\");",
            "      if (length(parts) >= 2) {",
            "        printf \"%s|%s\\n\", parts[1], parts[2]",
            "      }",
            "    }",
            "  }'",
            ") | column -t -s'|' | awk '{printf \"  \\033[32mâœ“\\033[0m %-20s \\033[90m%s\\033[0m\\n\", $1, $2}'",
            "echo ''",
            "echo -e '\\033[1;33mğŸ”§ Quick Commands:\\033[0m'",
            "echo -e '  \\033[32mâ€¢\\033[0m \\033[1mgo build\\033[0m                   Build the project'",
            "echo -e '  \\033[32mâ€¢\\033[0m \\033[1mgo test ./...\\033[0m             Run all tests'",
            "echo -e '  \\033[32mâ€¢\\033[0m \\033[1mgo run . --dry-run\\033[0m        Test without API calls'",
            "echo -e '  \\033[32mâ€¢\\033[0m \\033[1mgoreleaser build --snapshot\\033[0m  Build for all platforms'",
            "echo -e '  \\033[32mâ€¢\\033[0m \\033[1mgolangci-lint run\\033[0m         Lint the code'",
            "echo -e '  \\033[32mâ€¢\\033[0m \\033[1mair\\033[0m                        Live reload during development'",
            "echo ''",
            "echo -e '\\033[1;33m Project Info:\\033[0m'",
            "if [ -f go.mod ]; then",
            "  MODULE=$(grep '^module' go.mod | awk '{print $2}')",
            "  GO_VERSION=$(grep '^go' go.mod | awk '{print $2}')",
            "  echo -e \"  \\033[32mâ€¢\\033[0m Module: \\033[1m$MODULE\\033[0m\"",
            "  echo -e \"  \\033[32mâ€¢\\033[0m Go Version: \\033[1m$GO_VERSION\\033[0m\"",
            "fi",
            "if [ -d .git ]; then",
            "  BRANCH=$(git branch --show-current 2>/dev/null || echo 'unknown')",
            "  echo -e \"  \\033[32mâ€¢\\033[0m Git Branch: \\033[1m$BRANCH\\033[0m\"",
            "fi",
            "echo ''",
            "echo -e '\\033[1;35mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\\033[0m'",
            "echo ''"
        ],
        "scripts": {
            "build": "go build -o hermes .",
            "test": "go test -v ./...",
            "lint": "golangci-lint run",
            "release-snapshot": "goreleaser build --snapshot --clean",
            "run-dry": "go run . --dry-run",
            "clean": "rm -rf dist/ hermes"
        }
    }
}